{
    "name": "C++ SDL2 Development",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools"
            ]
        }
    },
    "workspaceFolder": "/workspace/Lab2",
    "remoteUser": "developer",
    "runArgs": [
        "--init",
        "--env", "DISPLAY=host.docker.internal:0",
        "--volume", "/tmp/.X11-unix:/tmp/.X11-unix:rw",
        "--volume", "${localWorkspaceFolder}:/workspace/Lab3"
    ],
    "containerEnv": {
        "DISPLAY": "host.docker.internal:0"
    },
    "postCreateCommand": "mkdir -p build && cmake -S. -B build -DCMAKE_BUILD_TYPE=Debug"
}