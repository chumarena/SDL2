{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug SDL2 Application",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/app",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {"name": "DISPLAY", "value": "host.docker.internal:0"}
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build with CMake",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}